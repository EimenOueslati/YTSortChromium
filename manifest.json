{
  "manifest_version": 3,
  "name": "YTsort",
  "version": "1.3",
  "description": "Sorts youtube tabs based on duration of video",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "webRequest",
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Youtube Sorter",
    "default_popup": "background_scripts/background.html"
  },
  
  "background": {
    "page": "background_scripts/background.html"
  }
}
